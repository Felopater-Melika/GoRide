---
import Layout from "../layouts/Layout.astro";
import CarCard from "../components/CarCard.astro";
import cars from "../content/cars.json";
---

<Layout title="Car Rental Listing">
  <div class="flex flex-col min-h-screen">
    <header class="flex items-center justify-center py-4 bg-base-200 mb-8">
      <div class="text-xl font-bold">
        <img src="/assets/logo.png" alt="logo" class="w-full h-28 object-cover" />
      </div>
    </header>

    <main class="flex-grow mx-auto px-4 lg:px-16 w-full">
      <h1 class="text-center text-4xl font-bold mb-8">Available Cars</h1>

      <!-- Expanded 3-9-3 Grid Layout -->
      <div class="flex justify-center">
        <div class="w-full max-w-screen-xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {cars.map((car) => (
              <CarCard name={car.name} year={car.year} price={car.price} image={car.image} />
          ))}
        </div>
      </div>
    </main>

    <footer class="py-8 bg-base-300 text-base-content mt-8">
      <div class="container mx-auto px-6 lg:px-16">
        <!-- Footer Grid Layout -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

          <!-- About Section -->
          <div>
            <h2 class="font-bold text-xl mb-4">About Us</h2>
            <p class="text-sm">
              We provide affordable car rental services with a wide range of vehicles to meet your needs.
              Customer satisfaction is our top priority.
            </p>
          </div>

          <!-- Contact Section -->
          <div>
            <h2 class="font-bold text-xl mb-4">Contact Us</h2>
            <p class="text-sm mb-2"><i class="fas fa-phone-alt mr-2"></i> +1 (555) 123-4567</p>
            <p class="text-sm mb-2"><i class="fas fa-envelope mr-2"></i> support@carrental.com</p>
            <p class="text-sm mb-2"><i class="fas fa-map-marker-alt mr-2"></i> 123 Main Street, Nashville, TN</p>
          </div>

          <!-- Social Links Section -->
          <div>
            <h2 class="font-bold text-xl mb-4">Follow Us</h2>
            <div class="flex space-x-4">
              <a href="#" class="text-xl hover:text-primary" aria-label="Facebook">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="#" class="text-xl hover:text-primary" aria-label="Twitter">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="#" class="text-xl hover:text-primary" aria-label="Instagram">
                <i class="fab fa-instagram"></i>
              </a>
              <a href="#" class="text-xl hover:text-primary" aria-label="LinkedIn">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </div>
          </div>

        </div>

        <!-- Footer Bottom Section -->
        <!--<div class="border-t border-base-200 mt-8 pt-4 text-center">-->
        <!--  <p>&copy; 2025 Car Rental Service. All rights reserved.</p>-->
        <!--</div>-->
      </div>
    </footer>

  </div>
</Layout>
